<Window x:Class="POP_SF_37_2016_GUI.UI.AkcijaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_37_2016_GUI.UI"
        mc:Ignorable="d"
        Title="AkcijaWindow" Height="600" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="175"/>
            <RowDefinition Height="350"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Naziv: " Grid.Row="0" Grid.Column="0"/>
            <TextBox Name="tbNaziv" Grid.Row="0" Width="480" Height="30" Grid.Column="1" Text="{Binding Path=Naziv}" HorizontalAlignment="Left"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Popust: " FontSize="15"/>
            <TextBox Grid.Row="1" Grid.Column="1" Width="480" Height="30" Name="tbPopust" Text="{Binding Path=Popust}" HorizontalAlignment="Left"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Datum pocetka akcije: " FontSize="15"/>
            <DatePicker Grid.Row="2" Grid.Column="1" Width="480" Height="30" Name="dpPocetakAkcije" SelectedDate="{Binding Path=DatumPocetka}" HorizontalAlignment="Left"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Datum zavrsetka akcije: " FontSize="15"/>
            <DatePicker Grid.Row="3" Grid.Column="1" Width="480" Height="30" Name="dpZavrsetakAkcije" SelectedDate="{Binding Path=DatumZavrsetka}" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label  Content="Namestaj na akciji: " Grid.Column="0" FontSize="15"/>
            <DataGrid  Name="dgNamestajAkcija" Grid.Column="1" AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sifra" Width="60" Binding="{Binding Sifra}"/>
                    <DataGridTextColumn Header="Naziv" Width="*" Binding="{Binding Naziv}"/>
                    <DataGridTextColumn Header="Tip namestaja" Width="*" Binding="{Binding TipNamestaja}"/>
                    <DataGridTextColumn Header="Cena" Width="100" Binding="{Binding JedinicnaCena}"/>
                    <DataGridTextColumn Header="Kolicina" Width="50" Binding="{Binding KolicinaUMagacinu}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Dodaj"   Height="30" Width="70" Grid.Column="2" Click="DodajNamestajAkcija_Click" Margin="10,0,13.6,320.4"/>
        </Grid>
        <Grid Grid.Row="2">


            <Button Content="Sacuvaj"  Height="35" Width="80" Click="SacuvajIzmene" Margin="519,5,94.6,4.8" />
            <Button Content="Izadji"  Height="35" Width="80" VerticalAlignment="Bottom" Click="IzlazIzProzora" Margin="604,0,9.6,4.8"/>
        </Grid>


    </Grid>
</Window>
