<Window x:Class="POP_SF_37_2016_GUI.UI.ProdajaNamestajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_37_2016_GUI.UI"
        mc:Ignorable="d"
        Title="ProdajaNamestajaWindow" Height="470" Width="504.38">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="343*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="Izaberite namestaj: " FontSize="15" Margin="0,0,0.2,4.6" />
        <ComboBox Grid.Row="0" Name="cbIdNamestaja" FontSize="15" Grid.Column="1"/>
        <Button Grid.Row="1" Content="Dodaj" Click="DodajNamestaj" Grid.Column="1" />
        <Label Grid.Row="2" Content="Datum: " FontSize="15"  />
        <DatePicker Grid.Row="2" Name="dpDatumProdaje" Grid.Column="1" FontSize="15"/>
        <Label Grid.Row="3" Content="Broja racuna: " FontSize="15"  />
        <TextBox Grid.Row="3" Name="tbBrojRacuna" Grid.Column="1"/>
        <Label Grid.Row="4" Content="Ime i prezime kupca: " FontSize="15" />
        <TextBox Grid.Row="4" Name="tbKupac" Grid.Column="1"/>
        <Label Grid.Row="5" Content="Izaberite &#xD;&#xA;dodatnu uslugu: " FontSize="15"/>
        <ComboBox Grid.Row="5" Name="cbDodatnaUsluga" Grid.Column="1" FontSize="15"/>
        <Button Grid.Row="6" Content="Dodaj" Click="DodajUslugu" Grid.Column="1"/>
        <Label Grid.Row="7" Content="Ukupna cena: " FontSize="15" />
        <Label Grid.Row="7" FontSize="15" Name="lblUkupnaCena" Grid.Column="1"/>

        <Button Grid.Row="8" Content="Sacuvaj" Margin="0,24.8,74.6,-0.2" Click="SacuvajIzmene" HorizontalAlignment="Right" Height="40" Width="70" Grid.Column="1" VerticalAlignment="Top"/>
        <Button Grid.Row="8" Grid.Column="1" Content="Izadji" Margin="246.8,24.8,-0.4,0.8" Click="IzlazIzProzora" HorizontalAlignment="Right" Height="40" Width="70" VerticalAlignment="Top"/>

    </Grid>
</Window>
