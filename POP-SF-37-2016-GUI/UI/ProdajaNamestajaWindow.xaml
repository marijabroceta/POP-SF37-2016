<Window x:Class="POP_SF_37_2016_GUI.UI.ProdajaNamestajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_37_2016_GUI.UI.Validacija"
        mc:Ignorable="d"
        Title="ProdajaNamestajaWindow" Height="700" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ControlTemplate x:Key="ValidationError">
            <DockPanel LastChildFill="True">
                <TextBlock Foreground="Red" FontSize="15" DockPanel.Dock="Bottom"  HorizontalAlignment="Center">Popunite polje!</TextBlock>
                <Border BorderBrush="Red" BorderThickness="3" >
                    <AdornedElementPlaceholder/>
                </Border>
            </DockPanel>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="480"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Height="30" Content="Ime i prezime: " Width="150" FontSize="15" Grid.Row="0" Grid.Column="0"/>
            <TextBox  Name="tbKupac" Height="30" Width="480" Grid.Row="0" Grid.Column="2" Validation.ErrorTemplate="{StaticResource ResourceKey=ValidationError}">
                <TextBox.Text>
                    <Binding Path="Kupac" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:ValidacijaString/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Label  Content="Datum: " FontSize="15" Height="30" Width="150" Grid.Row="1" Grid.Column="0" />
            <DatePicker  Name="dpDatumProdaje" Grid.Row="1" Width="480" FontSize="15" Height="30" SelectedDate="{Binding Path=DatumProdaje}" Grid.Column="2"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label  Content="Namestaj" FontSize="15"  Height="30" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <DataGrid  Name="dgIdNamestaja"  AutoGenerateColumns="False" ItemsSource="{Binding Path=IzabranaProdaja}"  CanUserAddRows="False" Grid.Column="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv" Binding="{Binding Namestaj.Naziv}" Width="*"/>
                    <DataGridTextColumn Header="Tip namestaja" Binding="{Binding Namestaj.TipNamestaja}" Width="*"/>
                    <DataGridTextColumn Header="Cena" Binding="{Binding Cena}" Width="*"/>
                    <DataGridTextColumn Header="Kolicina" Binding="{Binding Kolicina}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Dodaj" Click="DodajNamestaj" Width="70" Height="30" Grid.Column="4" VerticalAlignment="Top" />
            <Button Content="Obrisi" Height="30" Width="70"  Grid.Column="4" Grid.ColumnSpan="2" Margin="1.6,35,19.6,89.4" Click="ObrisiStavku_Click"  />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Content="Dodatna usluga" Height="30" FontSize="15" Grid.Column="0" VerticalAlignment="Top" />
            <DataGrid Name="dgDodatnaUsluga" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Path=IzabranaProdaja}" Grid.Column="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv" Binding="{Binding DodatnaUsluga.Naziv}" Width="*"/>
                    <DataGridTextColumn Header="Cena" Binding="{Binding DodatnaUsluga.Cena}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button  Content="Dodaj" Click="DodajUslugu" Height="30" Width="70" Grid.Column="4" VerticalAlignment="Top"/>
            <Button Content="Obrisi" Height="30" Width="70" Grid.Column="4" Margin="0.6,35,0.6,88.6" Click="ObrisiUslugu_Click"/>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="480"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Height="30" Content="Cena bez PDV-a: " FontSize="15" Grid.Row="0" Grid.Column="0"/>
            <Label Height="30" FontSize="15" Name="lblUkupnaCenaBezPDV" Content="{Binding Path=UkupnaCenaBezPDV}" Grid.Row="0" Grid.Column="2" />
            <Label Height="30" Content="Cena sa PDV-om: " FontSize="15" Grid.Row="1" Grid.Column="0"/>
            <Label Height="30" FontSize="15" Name="lblUkupnaCenaSaPDV" Content="{Binding Path=UkupnaCenaSaPDV}" Grid.Row="1" Grid.Column="2" />
            <Button  Content="Sacuvaj"  Click="SacuvajIzmene" HorizontalAlignment="Right" Height="30" Width="70" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Margin="0,11.6,74.8,10.4"/>
            <Button Content="Izadji"  Click="IzlazIzProzora" HorizontalAlignment="Right" Height="30" Width="70" VerticalAlignment="Center" Grid.Row="2"  Grid.Column="2" Margin="0,11.6,20.6,10.4" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
