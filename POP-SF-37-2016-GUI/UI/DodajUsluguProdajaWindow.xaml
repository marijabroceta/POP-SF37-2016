<Window x:Class="POP_SF_37_2016_GUI.UI.DodajUsluguProdajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_37_2016_GUI.UI"
        mc:Ignorable="d"
        Title="DodajUsluguProdajaWindow" Height="400" Width="600">
    <Grid>
        <Label Content="Pretraga" Height="30" Width="60" FontSize="12"  Margin="10,10,523.6,330.4"/>
        <TextBox Name="tbPretraga" Height="30" Margin="75,10,9.6,330.4" FontSize="12"/>
        <Label Content="Dodatna usluga" Height="30" Width="60" Margin="10,45,523.6,295.4"/>
        <DataGrid AutoGenerateColumns="False" Height="250" Name="dgUsluga" ItemsSource="{Binding Path=DodatnaUslugaZaProdaju}" Margin="75,75,9.6,45.4" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Width="*" Binding="{Binding Naziv}"/>
                <DataGridTextColumn Header="Cena" Width="*" Binding="{Binding Cena}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Dodaj" Name="btnDodaj" Height="30" Width="70" Margin="505,330,18.6,10.4" Click="DodajUslugu_Click"/>
    </Grid>
</Window>
