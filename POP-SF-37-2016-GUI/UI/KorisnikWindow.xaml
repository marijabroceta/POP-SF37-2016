<Window x:Class="POP_SF_37_2016_GUI.UI.KorisnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_37_2016_GUI.UI"
        mc:Ignorable="d"
        Title="KorisnikWindow" Height="360" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>

        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Ime: " FontSize="15"/>
        <TextBox Grid.Row="0" Grid.Column="1" Width="Auto" Name="tbIme"/>
        <Label Grid.Row="1" Content="Prezime: " FontSize="15"/>
        <TextBox Grid.Row="1" Grid.Column="1" Width="Auto" Name="tbPrezime"/>
        <Label Grid.Row="2" Content="Korisnicko &#xD;&#xA;ime: " FontSize="15"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="Auto" Name="tbKorisnickoIme"/>
        <Label Grid.Row="3" Content="Lozinka: " FontSize="15"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" Width="Auto" Name="pbLozinka"/>
        <Label Grid.Row="4" Content="Tip korisnika: " FontSize="15"/>
        <ComboBox Grid.Row="4" Grid.Column="1" FontSize="15" Name="cbTipKorisnika" Text="---Izaberite---" >
            <ComboBoxItem Content="Administrator"  FontSize="15"/>
            <ComboBoxItem Content="Prodavac" FontSize="15"/>
        </ComboBox>
        <Button Grid.Row="4" Content="Sacuvaj" Grid.ColumnSpan="2" Margin="98,54.2,215.6,0.4" Grid.RowSpan="2" Click="SacuvajIzmene" />
        <Button Grid.Row="4" Content="Izadji" Grid.Column="1" Margin="215.6,54.2,-0.4,0.4" Grid.RowSpan="2" Click="IzlazIzProzora"  />
    </Grid>
</Window>
